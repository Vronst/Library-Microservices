{%macro render_form(field, subfields=False, next_to=False)%}
{%if subfields%}
{%for subfield in field%}
<tr class="col-lg-4">
    <td>{{ subfield }}</td>
    <td>{{ subfield.label }}</td>
</tr>

{%endfor%}
{%else%}
{% if not next_to %}
<h4>{{field.label}}</h4>
{{field(size=32)}}
{% else %}
{{field.label}}{{field(size=32)}}
{% endif %}
{%for error in field.errors%}
            <p class='error'>{{error}}</p>
            {%endfor%}
{%endif%}
{%endmacro%}